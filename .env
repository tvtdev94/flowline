# ===========================================
# FLOWLINE Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# Database Configuration
# -------------------------------------------
DATABASE_NAME=flowline
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password_here
DATABASE_PORT=5432

# -------------------------------------------
# Google OAuth Configuration
# -------------------------------------------
# Get your credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# -------------------------------------------
# JWT Configuration
# -------------------------------------------
# Generate a secure random string (min 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_min_32_characters_long_change_in_production
JWT_ISSUER=flowline-api
JWT_AUDIENCE=flowline-app
JWT_EXPIRY_MINUTES=60

# -------------------------------------------
# Development Mode (Optional)
# -------------------------------------------
# Set to false to bypass Google Auth for development
ENABLE_GOOGLE_AUTH=false

# Mock user for development (only used if ENABLE_GOOGLE_AUTH=false)
MOCK_USER_ID=00000000-0000-0000-0000-000000000001
MOCK_USER_EMAIL=dev@flowline.local
MOCK_USER_NAME=Development User
MOCK_USER_GOOGLE_ID=dev-google-id

# -------------------------------------------
# Environment
# -------------------------------------------
ASPNETCORE_ENVIRONMENT=Development
# Change to Production for production deployment

# -------------------------------------------
# Domain (Optional)
# -------------------------------------------
# Set your domain for automatic HTTPS
# Leave as localhost for local development
DOMAIN=localhost
# Example: DOMAIN=flowline.yourdomain.com
